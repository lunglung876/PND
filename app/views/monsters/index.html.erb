
<div id="all_monsters">
    <table>
        <% counter = 0%>
        <% Monster.all.each do |m| %>

            <% if counter == 0 %>
            <tr>
            <%end%>

                <td> <div class="caption"><%=m.id%></div><%=link_to image_tag(m.icon.url),m %></td>
            <% if counter == 6%>
            <%counter = -1%>
            </tr>
            <%end%>
            <% counter+= 1%>
        <%end%>
    </table>
</div>